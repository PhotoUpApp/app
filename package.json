{
	"name": "photoup",
	"productName": "photoup",
	"version": "0.0.1",
	"description": "Photo Backup Tool",
	"license": "MIT",
	"repository": "photoupapp/app",
	"author": {
		"name": "Marius Cotofana",
		"email": "marius.coto@gmail.com",
		"url": "https://github.com/mariuscoto"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --linux --windows",
		"release": "np"
	},
	"dependencies": {
		"chokidar": "^3.4.0",
		"electron-context-menu": "^2.0.0",
		"electron-debug": "^3.0.0",
		"electron-store": "^5.1.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.3.1",
		"electron-util": "^0.14.1",
		"jquery": "^3.5.0",
		"log4js": "^6.2.1"
	},
	"devDependencies": {
		"electron": "^8.2.5",
		"electron-builder": "^22.6.0",
		"electron-css-reload": "^1.0.8",
		"np": "^6.2.3",
		"xo": "^0.30.0"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.photoup.app",
		"mac": {
			"category": "public.app-category.photography",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Utility;Archiving"
		}
	}
}
